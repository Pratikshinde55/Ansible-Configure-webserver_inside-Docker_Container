#Playbook for launching Docker Container using Httpd image
- hosts: all
  become: yes
  tasks:
    - name: Install Docker
      yum:
        name: docker
        state: present

    - name: Start Docker service
      systemd:
        name: docker
        state: started
        enabled: yes
    - name: install python package
      package: 
        name: python3
        state: present

    - name: create file for adding container volume
      file:
        state: directory
        path: /root/code1

    - name: copy local code or deploy webpage
      copy:
        src: index.html
        dest: /root/code1

    - name: Pull httpd image from Docker Hub
      docker_image:
        name: httpd
        source: pull

    - name: Run httpd container
      docker_container:
        name: my_httpd_container
        image: httpd
        ports:
          - "8080:80"
        volumes:
          - /root/code1/index.html/:/var/www/html/index.html
        restart_policy: always      
